<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'Add New Actor', new_actor_path %>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
      <td><%= link_to actor.name, actor_path(actor) %></td>
        <td><%= actor.gender %></td>
        <td><%= actor.age %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= button_to 'Delete', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

