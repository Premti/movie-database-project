<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'Add New Character', new_actor_path %>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= link_to character.name, character_path(character) %></td>
        <td><%= character.gender %></td>
        <td><%= character.profession %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= button_to 'Delete', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
