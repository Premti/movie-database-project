<p id="notice"><%= notice %></p>

<h1>Movie Characters</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Character</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_characters.each do |movie_character| %>
      <tr>
        <td><%= movie_character.movie_id %></td>
        <td><%= movie_character.character_id %></td>
        <td><%= link_to 'Show', movie_character %></td>
        <td><%= link_to 'Edit', edit_movie_character_path(movie_character) %></td>
        <td><%= link_to 'Destroy', movie_character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

