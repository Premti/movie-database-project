<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<%= form_for "", url: movies_path, role: "search", method: :get do %>
  <%text_field_tag :search, @search_term, placeholder: "Search..." %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Synopsis</th>
      <th>Release year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'Add New Movie', new_movie_path %>
 
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie_path(movie) %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.synopsis %></td>
        <td><%= movie.release_year %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= button_to  'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
